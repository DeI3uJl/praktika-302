generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://test:password@postgresql.vm:5432/MaximAntoshin?schema=public"
}

model User {
  id String @id @default(uuid())
  firstName String 
  lastName String
  email String
  numberPhone String
  position String
  jobPlace String
  aboutPC PC[]

}

model PC {
  id String @id @default(uuid())
  motherboard String?
  processor String?
  videocard String?
  RAM String?
  keyboard String?
  monitor String?
  user User? @relation(fields:[userId], references: [id])
  userId String?

}